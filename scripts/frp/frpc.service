[Unit]
Description=frpc
After=network.target remote-fs.target nss-lookup.target

[Service]
Type=forking
PIDFile=/run/frpc.pid
ExecStart=/bin/bash /opt/frpc/start_server.sh
ExecReload=/opt/frpc/frpc reload
KillSignal=SIGQUIT
TimeoutStopSec=5
KillMode=process
PrivateTmp=true

[Install]
WantedBy=multi-user.target
